<div class="container-fluid w-25 border rounded shadow mt-5 p-4 text-center">
  <div class="text-start">
    <%= link_to "Back", admin_users_path  %>
  </div>

  <h1>User Form </h1>
  <%= form_for ([:admin, @user]) do |f| %>
    <div class="field mb-3">
      <%= f.label :user_name %>
      <%= f.text_field :user_name, required: true %>
    </div>
  
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>

