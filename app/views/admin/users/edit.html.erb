<div class="container-fluid w-25 border rounded shadow mt-5 p-4 text-center">
  <h1>User Form </h1>
  <%= form_for ([:admin, @user]) do |f| %>
    <%= f.label :user_name %><br>
    <%= f.text_field :user_name %><br>
    <br>
    <%= f.label :email %><br>
    <%= f.text_area :email %><br>
    <br>
    <%= f.label :password %><br>
    <%= f.password_field :password %><br>
    <%= f.submit %>
    <br>
  <% end %>
</div>

