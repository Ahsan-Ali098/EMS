<!-- form html -->
<div class="container-fluid w-50 border rounded shadow mt-5 p-4 text-center" >
  <h2> Add product </h2>
  <%= form_for [:admin,@product] do |f| %>

  <div class="field mb-3 text-start">
    <%= f.file_field :image, class: "form-control" %>
  </div>

    <div class="field mb-3 text-start">
      <%= f.label :Title, class: "form-label" %>
      <%= f.text_field :title, required: true, autofocus: true, autocomplete: "title", class: "form-control" %>
    </div>

    <div class="field mb-3 text-start">
      <%= f.label :Price, class: "form-label" %><br />
      <%= f.text_field :price, required: true, autofocus: true, autocomplete: "price", class: "form-control" %>
    </div> 

    <div class="field mb-3 text-start">
      <%= f.label :Description, class: "form-label" %>
      <%= f.text_area :description, required: true, autofocus: true, class: "form-control" %>
    </div>

    <div class="dropdown field mb-3 text-start">
      <%= f.label :Select_Status, class: "form-label" %><br />
      <%= f.select :status, options_for_select(Product.statuses.keys.to_a.map {|key| [key.titleize, key]}), {}, class: "mx-2 form-select" %>
    </div>

    <div class="dropdown field mb-3 text-start">
      <%= f.label :select_category, class: "form-label" %><br />
      <%= f.select :category_id, options_for_select(Category.all.map {|key| [key.name, key.id]}), {}, class: "mx-2 form-select" %>
    </div>

    <div class="actions mb-2">
      <%= f.submit "Create Product", class: 'btn btn-primary btn-lg' %>
    </div>
  <% end %>
</div>
