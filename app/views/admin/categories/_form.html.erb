<div class="container-fluid w-50 border rounded shadow mt-5 p-4" >
  <%= link_to "Back", admin_categories_path  %>
  <div class="text-center">
    <h2> Add Category </h2>
    <%= form_for [:admin,@category] do |f| %>
      <div class="field mb-3 text-start">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, required: true, autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>
  
      <div class="actions mb-2">
        <%= f.submit "Create Category", class: 'btn btn-primary btn-lg' %>
      </div>
    <% end %>
  </div>
</div>
