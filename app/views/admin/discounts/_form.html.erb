<div class="container-fluid w-50 border rounded shadow mt-5 p-4 text-center" >
  <h2> Add Discount </h2>
  <%= form_for [:admin,@discount] do |f| %>
    <div class="field mb-3 text-start">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, required: true, autofocus: true, autocomplete: "name", class: "form-control" %>
    </div>

    <div class="field mb-3 text-start">
      <%= f.label :price, class: "form-label" %>
      <%= f.text_field :price, required: true, autofocus: true, autocomplete: "name", class: "form-control" %>
    </div>

    <div class="dropdown field mb-3 text-start">
      <%= f.label :select_product, class: "form-label" %><br />
      <%= f.select :products, options_for_select(Product.all.map {|key| [key.title, key.id]}), {},multiple: true, class: "mx-2 form-select" %>
    </div>

    <div class="actions mb-2">
      <%= f.submit "Create Discount", class: 'btn btn-primary btn-lg' %>
    </div>
  <% end %>
</div>
