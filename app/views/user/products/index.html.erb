<div class="container-fluid w-75 border rounded shadow mt-5 p-4 text-center sign-up-form mb-5" >
  <h2>Products listing</h2>
  <div class="d-flex flex-wrap justify-content-around">
    <% @products.each do |product| %>
      <div class="card my-3">
        <%= image_tag product.image if product.image.attached? %>
        <div class="card-body">
          <h5 class="card-title"><%= product.title %></h5>
          <p class="card-text"><%= product.description %></p>
          <p class="card-text">Rs: <%= product.price %></p>
          <%= button_to "Add to cart", user_order_items_path(product_id: product.id) %>
        </div>
      </div>
    <% end %>
  </div>
</div>
