<div class="container-fluid w-75 border rounded shadow mt-5 p-4 text-center sign-up-form mb-5">
  <h2>Cart show</h2>
  <ul>
    <% @cart.order_items.each do |order_item| %>
      <li>
        Item: <%= order_item.product.title %>
      </li>
      <li>
        Price: <%= number_to_currency(order_item.product.price) %>
      </li>
      <li>
        Quantity: <%= order_item.quantity %>
      </li>
      <li>
        Total Price: <%= number_to_currency(order_item.total_price) %>
      </li>
      <ul>
        <li>
          <%= link_to "Add one", order_item_add_path(:id => order_item), method: :post %>
          <%= link_to "Reduce one", order_item_reduce_path(:id => order_item), method: :post %>
        </li>
        <li>
          <%= link_to "Remove item", user_order_item_path(order_item), method: :delete %>
        </li>
      </ul>
      <%= form_with model: @cart, url: carts_discount_path, method: 'post' do |f| %>
      <div class="field mb-3 text-start">
        <%= f.label :coupon, class: "form-label" %>
        <%= f.text_field :coupon, autofocus: true, autocomplete: "title", class: "form-control" %>
      </div>
      <div class="actions mb-2">
        <%= f.submit "Apply", class: 'btn btn-primary btn-lg' %>
      </div>
      <%end%>

    <% end %>
  </ul>
  <%byebug%>
  <h3>Sub total: <%= carts_discount_path(@cart.sub_total) %></h3>
  <%= link_to "Proceed to checkout", new_user_order_path %><br>
  <%= link_to "Empty cart", user_carts_path(@current_cart),method: :delete, data: {confirm: "Are you sure?"}
</div>
