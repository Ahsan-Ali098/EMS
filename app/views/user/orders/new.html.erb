<div class="container-fluid w-25 border rounded shadow mt-5 p-4 text-center">
  <%= form_for [:user, @order] do |f| %>
  <div class="field mb-3 text-start">
    <%= f.label :firstname %><br>
    <%= f.text_field :firstname, required: true, autofocus: true %>
  </div>
  <div class="field mb-3 text-start">
    <%= f.label :lastname %><br>
    <%= f.text_field :lastname, required: true, autofocus: true %>
  </div>
  <div class="field mb-3 text-start">
    <%= f.label :email %><br>
    <%= f.email_field, required: true :email %>
  </div>
  <div class="field mb-3 text-start">
    <%= f.label :address %><br>
    <%= f.text_area, required: true :address %>
  </div>

  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Select Payment Method
  </button>
</div>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Payment Method</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="field">
          <%= f.radio_button :payment, "cash" %>
          <%= f.label :cash,   "cash" %>
          <%= f.radio_button :payment, "card" %>
          <%= f.label :cash,   "card" %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
       
       <div class="btn btn-primary " >
        <%= f.submit %>
       </div>
       <% end %>
      </div>
    </div>
  </div>
</div>
