<div class="container-fluid w-75 border rounded shadow mt-5 p-4 text-center mb-5">
  <h5>Apply coupon if available</h5>
  <%= form_with url: new_user_order_path, method: 'get', remote: true do |f| %>
  <div class="field mb-3 text-start">
    <%= f.label :coupon, class: "form-label" %>
    <%= f.text_field :coupon, autofocus: true, autocomplete: "title", class: "form-control" %>
  </div>
  <div class="actions mb-2">
    <%= f.submit "Apply", class: 'btn btn-primary btn-lg' %>
  </div>
  <h3>Final Total: <%= @current_cart.sub_total %></h3>

  <h3>After Discount: <%= coupon %></h3>
<% end %>
</div>
